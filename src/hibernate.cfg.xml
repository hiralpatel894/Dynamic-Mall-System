<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
<session-factory>
  <property name="hibernate.connection.driver_class"> com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost/demo1</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.connection.password"> </property>
  <property name="hibernate.connection.pool_size">10</property>
  <property name="show_sql">true</property>
  <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <!-- Mapping files -->
  <!-- <mapping resource="vo/reg.hbm.xml"/> -->
  <mapping resource="VO/category.hbm.xml"/>
  <mapping resource="VO/package.hbm.xml"/>
  <mapping resource="VO/subcategory.hbm.xml"/>
   <mapping resource="VO/country.hbm.xml"/>
  <mapping resource="VO/state.hbm.xml"/>
  <mapping resource="VO/city.hbm.xml"/>
  <mapping resource="VO/advertisement.hbm.xml"/>
   <mapping resource="VO/registration.hbm.xml"/>
    <mapping resource="VO/sellerProfile.hbm.xml"/>
     <mapping resource="VO/posting.hbm.xml"/>
      <mapping resource="VO/postingMapping.hbm.xml"/>
      <mapping resource="VO/complaint.hbm.xml"/>
  	 <mapping resource="VO/feedback.hbm.xml"/>
    <mapping resource="VO/auction.hbm.xml"/>
      <mapping resource="VO/auctionmapping.hbm.xml"/>
      
          <mapping resource="VO/product.hbm.xml"/>
      <mapping resource="VO/productmapping.hbm.xml"/>

</session-factory>
</hibernate-configuration>